{
  "name": "registry-api",
  "version": "1.0.0",
  "description": "API for platform services registry",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec babel-node -- ./src/index.js",
    "dev:docker": "nodemon -L --delay 1600ms --watch build --inspect=0.0.0.0:9229 -e js,json --nolazy ./build/server.js",
    "test": "node -r dotenv/config $(which jest)",
    "prettier": "prettier --write 'src/**/*.js'",
    "build": "babel -d dist src"
  },
  "dependencies": {
    "apollo-datasource-mongodb": "^0.5.2",
    "apollo-server": "^3.7.0",
    "apollo-server-core": "^3.6.4",
    "apollo-server-express": "^3.6.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "graphql": "^16.4.0",
    "graphql-scalars": "^1.15.0",
    "graphql-tools": "^8.2.7",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5",
    "keycloak-connect": "^17.0.1",
    "keycloak-connect-graphql": "^0.7.0",
    "mongodb": "^4.4.1",
    "nats": "^2.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.7",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@shelf/jest-mongodb": "^2.2.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1"
  }
}
