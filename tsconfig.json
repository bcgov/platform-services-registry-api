{
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "typeAcquisition": { "include": ["jest"] },
  "include": [
    "src/**/*.ts",
    "src/scripts/projectDataToCsv/index.js",
    "src/env.ts",
    "dist"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
